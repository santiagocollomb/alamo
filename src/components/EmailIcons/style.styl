.email-icons
  display flex
  column-gap 2em
  row-gap 2em
  margin-top auto
  .icon
    svg
      width 20px
      height auto
      margin-right 0.5em

    span
      transition all 100ms cubic-bezier(.57,.21,.69,0.65)
      font-size 0.9rem
  a
    transition all 400ms cubic-bezier(.57,.21,.69,0.65)
    &:hover
      span
        text-decoration underline
        font-size 1rem

.color-white
  .icon
    a
      text-decoration none
    svg
      path 
        fill #fff
    
    span 
      color #fff
      