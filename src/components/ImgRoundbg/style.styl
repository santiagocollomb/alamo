.round-bg
  background-color #ED1C24
  width 80vw
  height 80vw
  box-shadow 0 3px 6px rgba(0,0,0,0.16)
  border-radius 50%
  img
    width 120%
    position relative
    right 20%
    top 5%
    filter: drop-shadow(2px 4px 6px black);

@media only screen and (min-width:60em)
  .round-bg
    width 25vw
    height 25vw
    img
      width 120%
      position relative
      right 20%
      top 5%