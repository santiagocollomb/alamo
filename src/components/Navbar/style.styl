.navbar 
  position fixed
  padding 0.5rem 0
  top 0
  display flex
  width 100%
  background #fff
  z-index 999
  box-shadow 0px 3px 6px rgba(0,0,0,0.16)
  transform translateY(0px)
  transition all 200ms cubic-bezier(.57,.21,.69,0.65)
  .col-12
    display flex

  .dropdown 
    cursor pointer
    position relative
    display inline-block
    &:hover
      .dropdown-content 
        display block

      .arrow
        transition all 200ms cubic-bezier(.57,.21,.69,0.65)
        transform rotate(-135deg)
        -webkit-transform rotate(-135deg)

    .arrow
      border solid #636A73
      border-width 0 3px 3px 0
      display inline-block
      padding 3px
      transform rotate(45deg)
      -webkit-transform rotate(45deg)

    .dropdown-content 
      display none
      position absolute
      right 0px
      margin-top 5px
      background-color #f9f9f9
      border-radius 5px
      padding 0.4rem 1.2rem
      box-shadow 0px 2px 10px  rgba(0,0,0,0.2)
      transition all 300ms cubic-bezier(.57,.21,.69,0.65)
      z-index 1

  .logo
    width 32%
    height 50px
    display flex
    align-self center
    justify-self center
    padding 0

    a
      display flex

      svg
        width: 100%;

  .nav-content-right
    margin-left auto
    display inline-flex

    ul
      display flex
      column-gap 1.2em
      margin 0
      height 100%

      li
        list-style none
        display flex
        align-self center
        a
        button
          background transparent
          border none
          cursor pointer
          font-weight 300
          text-decoration none
          transition font-weight 300ms cubic-bezier(.57,.21,.69,0.65)
          &:hover
          &:active
            font-weight 600

    .language-li
      display flex
      .language-btn
        height fit-content
        align-self center
        justify-self center   
        text-decoration none 

  .menu-icon
    cursor pointer
    padding 1em 0

  .bar1 
  .bar2 
  .bar3 
    width 30px
    height 4px
    background-color #333
    margin 6px 0
    transition 0.4s
    border-radius 30px
    box-shadow 1px 1px 3px rgba(0,0,0,0.2)

  .bar1
    width 15px
    margin-left auto

  .bar3
    width 15px
  /* Rotate first bar */
  .change .bar1 
    -webkit-transform rotate(-45deg) translate(-9px, 6px) 
    transform rotate(-45deg) translate(-9px, 6px) 

  /* Fade out the second bar */
  .change .bar2 
    opacity 0

  /* Rotate last bar */
  .change .bar3 
    -webkit-transform rotate(45deg) translate(-8px, -8px)
    transform rotate(45deg) translate(-8px, -8px) 

.navbar-hidden
  transform translateY(-10em)

@media only screen and (min-width:33.75em)
  .navbar 
    .logo
      width 12%
      padding 0.5em 0