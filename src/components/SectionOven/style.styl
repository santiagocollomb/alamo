button 
  width 80%
  margin auto
  display block

h2.title
  text-align center
  font-weight bold

.link
  font-weight 400
  transition all 300ms cubic-bezier(.57,.21,.69,0.65)
  &:hover
    font-weight 600

@media only screen and (min-width:60em)
  #oven
    padding 90px 0px
    ul
      padding 1.2rem
      li
        width 70%
  button  
    width fit-content
    margin 0

  h2.title
    text-align left
    width 80%