@import url("https://use.typekit.net/fgw6hvd.css")

color-primary = #ED1C24
color-dark = #1A1A1A
color-light = #F2F2F2
color-gray = #636A73

*
  font-family industry, sans-serif
  letter-spacing 1px

html
  scroll-behavior:smooth

body 
  margin 0px
  height 100%

#gatsby-focus-wrapper
  overflow hidden
  height 100%

.container
  width 100% !important
  max-width 90% !important

/* TEMPLATE */
.btn
  background transparent
  border none
  border-radius 5px
  cursor pointer
  padding 0.6em 2em
  font-size 0.9rem
  font-weight 600
  box-shadow 0 1px 1px rgba(0,0,0,0.11), 
            0 2px 2px rgba(0,0,0,0.11), 
            0 4px 4px rgba(0,0,0,0.11), 
            0 6px 8px rgba(0,0,0,0.11),
            0 8px 16px rgba(0,0,0,0.11);

  transition all 200ms cubic-bezier(0.64, 0.57, 0.67, 1.53);

  &.btn-medium
    padding 0.3em 2em
    font-size 0.9rem
  &:hover
    box-shadow  0 2px 1px rgba(0,0,0,0.09), 
              0 4px 2px rgba(0,0,0,0.09), 
              0 8px 4px rgba(0,0,0,0.09), 
              0 16px 8px rgba(0,0,0,0.09);
    transform scale(1.05)
  
.btn-primary
  background-color color-primary
  color #fff

.btn-dark-gray
  background-color color-gray
  color color-light

.content-right
  position absolute
  right -40%
  top 90%

.section-shadow
  box-shadow 0 0 15px rgb(0, 0, 0, 0.7)

.pulse
  filter drop-shadow(0,0,15px, rbga(0,0,0,0.16))
  animation pulsate 3s ease-out
  animation-iteration-count infinite

@keyframes pulsate 
  0% 
    transform scale(1, 1)

  20%
    transform scale(1.2, 1.2)
  
  40%
    transform scale(1, 1)

  60%
    scale(1.2, 1.2);

  80% 
    transform scale(1, 1)


.not-found
	position absolute
	left 50%
	top 50%
	transform translate(-50%, -50%)
	text-align center
	
  h1, 
  h2, 
  h3
    margin 0
    line-height .8
  
  h2, 
  h3
    font-weight 300
    color color-primary
  
  h1 
    font-weight 700
    color color-primary
    font-size 8em
  
  h2 
    margin 30px 0
  
  h3 
    font-size 2.5em

  h4 
    display inline-block
    margin 0 15px
  
  a
    background transparent
    border 2px solid color-primary
    color color-primary
    padding 5px 15px
    font-size 1.25em
    transition all 0.15s ease
    border-radius 3px
	
    &:hover
      background $dark-text-color
      border 2px solid $dark-text-color
      color #111
      cursor pointer
      transform scale(1.05)
  

@media only screen and (min-width:33.75em)
  .content-right
    right 0%
    top 5%

  .btn
    padding 0.6em 2em
    font-size 1.1rem