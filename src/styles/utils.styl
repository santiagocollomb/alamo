color-primary = #ED1C24
color-dark = #1A1A1A
color-light = #F2F2F2
color-gray = #9FA3A6

// SECTIONS 
.section-full
  padding 90px 0px
  min-height calc(100vh - 90px)
  background-size cover
  background-repeat no-repeat

.section-half
  min-height 60vh
  padding 90px 0px

.section-small
  min-height calc(100vh - 60px)
  padding 30px 0px

.bg-primary
  background-color #E2252C
  box-shadow 0 0 15px rgba(0,0,0,0.4)
  position relative
  z-index 99

.bg-black
  background-color color-dark
  position relative
  z-index 9

.bg-white
  background-color #fff
  position relative
  z-index 9

.flex-column
  display flex
  flex-direction column
  height 100%

  .btn
    width 80%
    margin auto

  .btn.btn-left
    width fit-content
    margin 0px

.justify-center
  justify-content center

.align-center
  align-content center

.d-sm-none
  display none

// TEXT
.title
  font-size calc(1.8rem + 1vw)
  font-weight 900
  text-shadow 1px 1px 5px rgba(0,0,0,0.16)

.subtitle
  font-size calc(0.8em + 1vw)
  color #9FA3A6

h2.title
  text-align center
  font-size calc(1.5em + 1vw)

h3.subtitle
  text-align center

.page-label
  width 100%
  display block
  text-align center
  color: #ED1C24
  text-shadow 0 0 30px rgba(237, 28, 36, 0.25)

.text-medium
  font-size calc(1em + 1vw) !important

.uppercase
  text-transform uppercase

.text-center
  text-align center !important

.text-bold
  font-weight bold

.text-regular
  font-weight 400

.text-white
  color #fff

.text-gray
  color #7a7a7a

.text-light-gray
  color: #D7D7D9

.text-primary
  color color-primary

