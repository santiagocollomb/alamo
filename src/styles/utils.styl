/* PANTALLAS GRANDES */
@media only screen and (min-width: 60em)
  .section-full
    height calc(100vh - 160px)
    min-height calc(100vh - 160px)
    padding 160px 0px

  .section-half
    min-height calc(70vh - 180px)
    padding 160px 0px

  .section-small
    min-height calc(100vh - 60px)
    padding 30px 0px

  .title
    font-size calc(2em + 1vw)

  h2.title
    text-align left
    font-size calc(1.5em + 1vw)

  h3.subtitle
    text-align left

  .page-label
    text-align left

  .flex-column
    .btn
      width fit-content
      margin 0px

